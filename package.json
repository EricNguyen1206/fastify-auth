{
  "name": "fastify-auth",
  "version": "1.0.0",
  "description": "fastify authentication service",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "prisma generate && prisma db push && echo Build complete - Prisma client generated",
    "postinstall": "prisma generate",
    "prod": "cross-env NODE_ENV=production node src/server.js",
    "pm2": "pm2 start ecosystem.config.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPattern=unit --detectOpenHandles --forceExit",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPattern=integration --detectOpenHandles --forceExit",
    "perf:load:npm": "cross-env PORT=8000 NODE_ENV=production node src/server.js & timeout /t 5 /nobreak > nul && k6 run src/tests/k6/scenarios/load-test.js",
    "perf:stress:npm": "cross-env PORT=8000 NODE_ENV=production node src/server.js & timeout /t 5 /nobreak > nul && k6 run src/tests/k6/scenarios/stress-test.js",
    "perf:load:pm2": "pm2 start ecosystem.config.js && timeout /t 5 /nobreak > nul && k6 run src/tests/k6/scenarios/load-test.js && pm2 delete fastify-auth",
    "perf:stress:pm2": "pm2 start ecosystem.config.js && timeout /t 5 /nobreak > nul && k6 run src/tests/k6/scenarios/stress-test.js && pm2 delete fastify-auth"
  },
  "keywords": [
    "fastify",
    "nodejs",
    "authentication",
    "docker",
    "grafana",
    "prometheus",
    "loki",
    "tempo"
  ],
  "author": "ericnguyen1206",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.2",
    "@fastify/rate-limit": "^10.3.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-prometheus": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-pino": "^0.55.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-logs": "^0.208.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@prisma/client": "^5.10.0",
    "@sqlitecloud/drivers": "^1.0.653",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^5.1.0",
    "pino-loki": "^2.6.0",
    "pino-pretty": "^13.1.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.10.0"
  },
  "engines": {
    "node": ">=18.15.0 <19.0.0 || >=18.15.0"
  }
}
