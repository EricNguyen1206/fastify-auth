{
  "dashboard": {
    "title": "Fastify Auth - Database Performance",
    "tags": ["fastify", "auth", "database"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Database Query Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(db_query_total[5m])) by (operation, table)",
            "legendFormat": "{{operation}} {{table}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Database Query Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket[5m])) by (le, operation, table))",
            "legendFormat": "p95 {{operation}} {{table}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Database Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(db_query_errors_total[5m])) by (operation, table)",
            "legendFormat": "{{operation}} {{table}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Query Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(db_query_total{status=\"success\"}[5m])) / sum(rate(db_query_total[5m])) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Top Queries by Table",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(db_query_total[5m])) by (table, operation))",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ]
  }
}

