# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key

# Database Configuration
# Prisma Database URL (takes precedence if set)
DATABASE_URL=file:./data/app.db

# Legacy Database Configuration (for backward compatibility)
# Options: 'sqlite' or 'sqlitecloud'
DB_TYPE=sqlite
# For local SQLite
DB_PATH=./data/app.db
# For SQLite Cloud (required if DB_TYPE=sqlitecloud)
# DB_CONNECTION_STRING=sqlitecloud://user:password@host.sqlite.cloud:8860/database
# DATABASE_URL=sqlitecloud://user:password@host.sqlite.cloud:8860/database

# Rate Limiting (production only)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging & Observability Configuration
# Enable Loki logging (true/false) - set to true to enable logging to Loki
LOKI_ENABLED=true
# Loki server URL - use 127.0.0.1 to avoid IPv6 issues on Windows
LOKI_URL=http://127.0.0.1:3101
# Tempo server URL for distributed tracing
TEMPO_URL=http://127.0.0.1:3200

