# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key

# Database Configuration (PostgreSQL)
# Aiven PostgreSQL connection string (required)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URI=postgres://avnadmin:yourpassword@your-host.aivencloud.com:12345/defaultdb?sslmode=require

# Example (Aiven):
# DATABASE_URI=postgres://avnadmin:AVNS_abc123@pg-project-tenant.aivencloud.com:24346/defaultdb?sslmode=require

# Rate Limiting (production only)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
